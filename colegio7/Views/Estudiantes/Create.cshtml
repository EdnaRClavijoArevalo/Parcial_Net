@model dataAccess.Models.Estudiantes

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Estudiantes</h4>
            <hr />
            @Html.ValidationSummary(true)
    
            <div class="form-group">
                @Html.LabelFor(model => model.numeroIdentificacion, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.numeroIdentificacion)
                    @Html.ValidationMessageFor(model => model.numeroIdentificacion)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.nombre, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nombre)
                    @Html.ValidationMessageFor(model => model.nombre)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.apellido, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.apellido)
                    @Html.ValidationMessageFor(model => model.apellido)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.direccion, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.direccion)
                    @Html.ValidationMessageFor(model => model.direccion)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.idBarrio, "idBarrio", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("idBarrio", String.Empty)
                    @Html.ValidationMessageFor(model => model.idBarrio)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.idCurso, "idCurso", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("idCurso", String.Empty)
                    @Html.ValidationMessageFor(model => model.idCurso)
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
                <div class="col-md-offset-2 col-md-10">
                    @Html.ValidationMessageFor(model => model.maxRegistros)
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
